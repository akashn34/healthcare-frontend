pipeline { 
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/akashn34/healthcare-frontend.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install -g @angular/cli'        // Install Angular CLI globally
                sh 'npm install'                        // Install project dependencies
            }
        }
        stage('Build Frontend') {
            steps {
                sh 'ng build --prod'                    // Build Angular project
            }
        }
        stage('Run Frontend') {
            steps {
                sh 'nohup npx http-server ./dist/your-angular-app -p 4200 &'
            }
        }
    }
}

